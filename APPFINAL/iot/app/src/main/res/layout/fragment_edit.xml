<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/AQUA"
    android:layout_height="match_parent"
    tools:context=".edit">

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="478dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textColor="@color/chechoesgay"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:text="Editando datos de: " />

        <EditText
            android:id="@+id/textoedadeditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/open_sans_italic"
            android:hint="edad"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            android:textSize="50px" />

        <EditText
            android:id="@+id/textoestaturaeditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="estatura (cm)"
            android:textColorHint="@color/white"
            android:fontFamily="@font/open_sans_italic"
            android:textSize="50px"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/textopesoseditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="peso (kg)"
            android:textColorHint="@color/white"
            android:fontFamily="@font/open_sans_italic"
            android:textSize="50px"
            android:inputType="textPersonName" />

        <RadioGroup
            android:id="@+id/radiogroupeditar"
            android:layout_width="313dp"
            android:layout_height="93dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:textSize="45px"
                android:textColor="@color/chechoesgay"
                android:text="Seleccione su genero:" />

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="40px"
                android:text="masculino" />

            <RadioButton
                android:id="@+id/radioButtonF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="40px"
                android:text="femenino" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:textSize="40px"
            android:textColor="@color/chechoesgay"
            android:text="Frecuencia de ejercicio:" />

        <Spinner
            android:id="@+id/lista1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AQUA" />

        <Button
            android:id="@+id/editarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/black"
            android:text="Actualizar datos" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>