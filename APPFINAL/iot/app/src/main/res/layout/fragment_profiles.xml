<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AQUA"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    tools:context=".profiles">
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="729dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="50dp"
                app:srcCompat="@drawable/joamani" />

            <TextView
                android:id="@+id/bienvenidoEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="60px"
                android:textColor="@color/chechoesgay"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:gravity="center"
                android:text='Hola "", tus datos actuales son' />

            <TextView
                android:id="@+id/EdadEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="50px"
                android:gravity="center"
                android:text="Edad: " />

            <TextView
                android:id="@+id/PesoEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="50px"
                android:text="Peso:" />

            <TextView
                android:id="@+id/EstaturaEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="50px"
                android:gravity="center"
                android:text="Estatura:" />

            <TextView
                android:id="@+id/GeneroEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="50px"
                android:gravity="center"
                android:text="Genero:" />

            <TextView
                android:id="@+id/Frecuenciaeditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_italic"
                android:textSize="50px"
                android:gravity="center"
                android:text="Frecuencia de ejercicio:" />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>